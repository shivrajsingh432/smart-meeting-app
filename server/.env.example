# ============================================================
# AI-Powered Smart Meeting App â€“ Environment Variables
# ============================================================
# Copy this file to .env and fill in your values

# Server
PORT=5000
NODE_ENV=development

# MongoDB Atlas Connection String
# Get it from: https://mongodb.com/atlas (free tier)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/smartmeeting?retryWrites=true&w=majority

# JWT Secret (use any long random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Hugging Face API Key
# Get it from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Hugging Face Models (you can change these)
HF_WHISPER_MODEL=openai/whisper-large-v3
HF_SUMMARIZATION_MODEL=facebook/bart-large-cnn

# File Upload Settings
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=uploads

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5000

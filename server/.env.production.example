# ============================================================
# SmartMeet – Production Environment Variables
# ============================================================

# Server
PORT=5000
NODE_ENV=production

# Public App URL (your deployed URL — no trailing slash)
APP_URL=https://your-app-name.onrender.com

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=https://your-app-name.onrender.com

# MongoDB Atlas Connection String
# Format: mongodb+srv://user:pass@cluster.mongodb.net/dbname?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster0.xxxxx.mongodb.net/smartmeeting?retryWrites=true&w=majority&appName=Cluster0

# JWT (use a long random string — at least 64 chars)
JWT_SECRET=REPLACE_WITH_VERY_LONG_RANDOM_SECRET_AT_LEAST_64_CHARS
JWT_EXPIRES_IN=7d

# Hugging Face API Key
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_your_token_here

# Hugging Face Models
HF_WHISPER_MODEL=openai/whisper-large-v3
HF_SUMMARIZATION_MODEL=facebook/bart-large-cnn

# Upload
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=uploads
